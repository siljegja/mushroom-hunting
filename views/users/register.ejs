<% layout('layouts/boilerplate') %> 

<div class="container d-flex justify-content-center align-items-center mb-5">
    <div class="row flex-fill">
        <div class="col-6 col-md-4 mx-auto mt-4" style="height: 40rem">
            <div class="card border-0 my-5">
                <div class="card-body">
                    <h4 class="card-title">Register</h5>
                    <form action="/register" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="username" required autofocus> 
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="email">Email</label>
                            <input class="form-control" type="email" id="email" name="email" required> 
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" required> 
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="d-grid">
                            <button class="btn btn-large text-white bg-dark py-2 px-5">Register</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>







